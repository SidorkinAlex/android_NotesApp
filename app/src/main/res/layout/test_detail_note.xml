<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/DetailNoteLinerMain">

    <TextView
        android:id="@+id/detail_title"
        style="@style/DetailNoteTitle"
        android:text="Заголовок Заметки" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/DetailButtonMenu"
            android:text="@string/nav_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:text="12.11.2021"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_note_liner"
        android:padding="20dp"
        android:text="@string/test_text_note" />
</LinearLayout>